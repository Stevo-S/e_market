<!DOCTYPE html>
<html>
<head>
  <title>EMarket</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main_nav_bar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="home">E-Market</a>
        </div>
        
        <div id="main_nav_bar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li <%= 'class="active"'.html_safe if current_page?('/home') %> >
              <a href='/home'>Home</a>
            </li>
            <li <%= 'class="active"'.html_safe if current_page?(products_path) %> >
              <a href=<%= products_path%>>Browse</a>
            </li>
            <li <%= 'class="active"'.html_safe if current_page?('/about') %> >
              <a href="/about">About</a>
            </li>
            <li <%= 'class="active"'.html_safe if current_page?('/help') %> >
              <a href="/help">Help</a>
            </li>
             <li <%= 'class="active"'.html_safe if current_page?("/contact") %> >
              <a href="/contact">Contact</a>
            </li>
            
            <li>
            <%= form_tag '/search', class: 'navbar-form navabar-left', role: 'search' do %>
            <div class='form-group'>
              <div class="input-group">
              <%= text_field_tag 'search', nil, placeholder: 'Search...', class: 'form-control' %>
                <span class="input-group-btn">
                  <button class="btn btn-default" role="button">
                    <span class="glyphicon glyphicon-search"> </span>
                  </button>
                </span>
              </div>
            </div>
          <% end %>
            </li>
            
             <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              Sign Up/Log In
              <span class="caret"></span>
            </a>    
            <ul class="dropdown-menu" role="menu" >
              <p>Login Form/ Sign-Up link to go here</p>
            </ul>
          </li>
  
          </ul>
          
       
          
          
          
         
        </div>
      </div>
    </nav>
  </div>

<%= yield %>

</body>
</html>
