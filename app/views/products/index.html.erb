<div class="container">
  <div class="container" id="postings_list">
    <% @products.each do |product| %>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag(product.picture_url(:list_version).to_s)  %>
      </div>
      <div class="col-md-6">
        <h2><%= product.product_name %></h2>
        <p>
          <%= product.description %>
        </p>
      </div>
    </div>
    <hr />
    <% end %>
  </div>
</div>