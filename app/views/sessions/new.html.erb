<div class="container">
  <%= form_for :session, url: login_path, html: {class: 'form-horizontal'} do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control'%>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit 'Log in', class: 'btn btn-lg btn-default' %>

  <% end %>
</div>